@model IEnumerable<Rocosa.Models.TipoAplicacion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de TipoAplicacion</h2>
        </div>
        <div class="col-6" text-end>
            <a asp-controller="TipoAplicacion" asp-action="Crear" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i>Tipo Aplicacion
            </a>

        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nombre Aplicacion
                    </th>
                    <th>
                        Orden
                    </th>
                    <th>
                        Acciones
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>                   
                        <td>
                            <a asp-asp-controller="TipoAplicacion" asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                <i class="fa-solid fa-pen-to-square"></i>Editar
                            </a>
                            <a asp-asp-controller="TipoAplicacion" asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                <i class="fa-solid fa-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

    }
    else
    {
        <p>No hay registros</p>

    }


</div>
@model IEnumerable<Rocosa.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="col-6" text-end>
    <a asp-controller="Categoria" asp-action="Crear" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i>Nueva Categoria
    </a>

</div>
<table class="table" table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MostrarOrden)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCategoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MostrarOrden)
                </td>
                <td>
                    <a asp-asp-controller="Categoria" asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                        <i class="fa-solid fa-pen-to-square"></i>Editar
                    </a>
                    <a asp-asp-controller="Categoria" asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                        <i class="fa-solid fa-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

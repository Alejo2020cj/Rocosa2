@model Rocosa.Models.Categoria

<form method="post" asp-action="Crear">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info p1-3">Nueva Categoria</h2>
        </div>

    </div>
    <div class="container">
        <div class="row">
            <dv class="col-md-6">
                <label label asp-for="NombreCategoria" class="form-label"></label>
                <input asp-for="NombreCategoria" class="form-control" />
            </dv>
        </div>
        <div class="row">
            <dv class="col-md-6">
                <label label asp-for="MostrarOrden" class="form-label"></label>
                <input asp-for="MostrarOrden" class="form-control" />
            </dv>
        </div>
        <br />
        <div class="d-grid-2 d-md-block">
            <button type="submit" class="btn btn-primary">Crear Nueva</button>
            <a asp-controller="Categoria" asp-action="Index" class="btn btn-success">Regresar</a>
        </div>

    </div>

</form>
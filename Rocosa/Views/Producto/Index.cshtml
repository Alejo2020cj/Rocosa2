@model IEnumerable<Rocosa.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="col-6" text-end>
    <a asp-controller="Producto" asp-action="Upsert" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i>Nuevo Producto
    </a>

</div>
<br />

<div>
@*    if(Model.Count()>0)
    {*@
       
</div>
<table class="table" table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoAplicacion)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.NombreCategoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoAplicacion.Nombre)
                </td>
                <td>
                    <a asp-asp-controller="Producto" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                        <i class="fa-solid fa-pen-to-square"></i>Editar
                    </a>
                    <a asp-asp-controller="Producto" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                        <i class="fa-solid fa-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>

